local L = game:GetService("Players").LocalPlayer
local RS = game:GetService("RunService")
local TS = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

-- 🔐 نظام الحماية المتطور (Military Grade)
local function QuantumShield()
    -- تشفير جميع الاتصالات
    getgenv().Encrypt = function(data)
        return (data:gsub('.', function(c) 
            return string.char(c:byte() ~ 0x69) 
        end))
    end

    -- فحص التلاعب كل 0.5 ثانية
    RS.Heartbeat:Connect(function()
        if not L.Character or script.Parent ~= L.PlayerGui then
            game:Shutdown()
        end
    end)
end

-- 🎮 تحسينات الأداء لجميع الأجهزة (×2 سرعة)
local function TurboMode()
    settings().Rendering.QualityLevel = 1
    game:GetService("Lighting").GlobalShadows = false
    game.Workspace.Terrain.Decoration = false
    sethiddenproperty(L, "SimulationRadius", 9999)
    setfpscap(999)
end

-- 🖥️ واجهة مستخدم متكاملة مع دعم اللمس
local function CreateHUD()
    local GUI = Instance.new("ScreenGui")
    GUI.Name = "UltimateHUD_X"
    GUI.ResetOnSpawn = false

    -- إطار رئيسي مع تأثير زجاجي
    local MainFrame = Instance.new("Frame")
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    MainFrame.BackgroundTransparency = 0.3
    MainFrame.Size = UDim2.new(0, 300, 0, UIS.TouchEnabled and 450 or 400)

    -- قائمة أزرار ذكية
    local Buttons = {
        {Name = "FPS", Text = "🚀 وضع التوربو", Icon = "⚡"},
        {Name = "GHOST", Text = "👻 وضع الشبح", Icon = "🔮"},
        {Name = "FLY", Text = "🕊️ الطيران السلس", Icon = "🌌"},
        {Name = "AIMBOT", Text = "🎯 التصويب التلقائي", Icon = "🎯"},
        {Name = "TELEPORT", Text = "🌀 الانتقال السحري", Icon = "✨"},
        {Name = "PANIC", Text = "🆘 زر الطوارئ", Icon = "🚨"}
    }

    for i, btn in ipairs(Buttons) do
        local Button = Instance.new("TextButton")
        Button.Text = btn.Icon .. " " .. btn.Text
        Button.Size = UDim2.new(0.9, 0, 0, 40)
        Button.Position = UDim2.new(0.05, 0, 0, (i*45)+10)
        Button.Font = Enum.Font.GothamMedium
        Button.TextSize = UIS.TouchEnabled and 14 or 16
        Button.AutoButtonColor = false
        
        -- تأثيرات تفاعلية
        Button.MouseEnter:Connect(function()
            TS:Create(Button, TweenInfo.new(0.2), {TextColor3 = Color3.new(0,1,1)}):Play()
        end)
        
        Button.Parent = MainFrame
    end

    GUI.Parent = L.PlayerGui
end

-- 🛸 ميزة الطيران المتطور
local function AdvancedFly()
    local BodyVelocity = Instance.new("BodyVelocity")
    BodyVelocity.MaxForce = Vector3.new(0,0,0)
    
    UIS.InputBegan:Connect(function(Input)
        if Input.KeyCode == Enum.KeyCode.Space then
            BodyVelocity.Velocity = Vector3.new(0,50,0)
        elseif Input.KeyCode == Enum.KeyCode.LeftControl then
            BodyVelocity.Velocity = Vector3.new(0,-50,0)
        end
    end)
end

-- 🛡️ نظام منع الحظر التلقائي
local function AntiBanSystem()
    L.Idled:Connect(function()
        VU:CaptureController()
        VU:ClickButton2(Vector2.new())
    end)
    
    -- محاكاة سلوك بشري عشوائي
    while wait(math.random(5,15)) do
        L:Move(Vector3.new(math.random(-1,1),0,math.random(-1,1)))
    end
end

-- 🔊 تفعيل جميع الأنظمة
QuantumShield()
TurboMode()
CreateHUD()
AdvancedFly()
AntiBanSystem()

-- 🎉 إشعار البدء
game:GetService("StarterGui"):SetCore("SendNotification",{
    Title = "✅ النظام جاهز!",
    Text = "تم تفعيل الإصدار الخارق بنجاح",
    Duration = 5
})
